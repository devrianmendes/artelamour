generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(uuid())
  nome String
  apelido String
  email String
  senha String
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  @@map("usuarios")
}

model Material{
  id String @id @default(uuid())
  nome String
  desc String
  quantidadeCusto String
  unidadeMedidaCusto String
  custo Decimal
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  pecas PecaMateriais[]
  @@map("materiais")
}

model Peca{
  id String @id @default(uuid())
  nome String
  desc String
  hrProd Int
  minProd Int
  lucroDesejado Int
  banner String?
  created_at DateTime @default(now())
  updated_at DateTime @default(now())

  materiais PecaMateriais[]
  @@map("pecas")
}

model PecaMateriais {
  id String @id @default(uuid())
  qtdMatUsado String
  unMedidaUsado String

  peca Peca @relation(fields: [peca_id], references: [id])
  peca_id String

  material Material @relation(fields: [material_id], references: [id])
  material_id String
}